<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi bấm vào -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#1E88E5"
                android:endColor="#1565C0"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#0D47A1"/>
        </shape>
    </item>

    <!-- Khi button bị vô hiệu hóa (disabled) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#9E9E9E"/>
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#42A5F5"
                android:endColor="#1E88E5"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#1565C0"/>
        </shape>
    </item>
</selector>