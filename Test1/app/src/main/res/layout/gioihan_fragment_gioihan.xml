<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gioihan.GioiHanFragment"
    android:background="@drawable/uneti2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custombtn2"
            android:drawableStart="@drawable/baseline_add_24"
            android:text="Thêm giới hạn"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/txtTieuDeGioiHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tieudegiohanapp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewApp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />


    </LinearLayout>

</FrameLayout>